<div id="msg_#MID#" class="block block-rounded block-bordered push-10">
    <div class="block-header bg-gray-lighter border-b">
        <p class="remove-margin remove-padding h4 font-w300">
            <a href="{D_SITEURL}/messages-center/?mid=#MID#">#MsgTitle#</a>
        </p>
    </div>
    <div class="block-content block-content-full block-content-mini border-b">
        <div class="row push-10">
        	<div class="col-md-6 font-w300 h6 text-muted">
                <b>{POSTDATE} :</b> #PostDate# <span class="push-10-l"><b>{READS} :</b> #Views#</span>
            </div>
        	<div class="col-md-6 font-w300 h6 text-muted text-right">#MsgType#</div>
        </div>
        #MsgTxt#
    </div>
    #TAGS#
    #REPLY#
</div>